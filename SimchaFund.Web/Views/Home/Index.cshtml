@using SimchaFund.Data
@model SimchaViewModel
<h1>Simchas</h1>
<div class="row">
    <button class="btn btn-danger mb-2" id="add-simcha">Add Simcha</button>
</div>
<div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Contributions</th>
                    <th>Simcha Name</th>
                    <th>Contributor Count</th>
                    <th>Total</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Simcha s in Model.Simchas)
                {
                    <tr>
                        <td>
                            <a href="/Home/ContributionsPerSimcha?id=@s.Id" class="btn btn-success">Contributors</a>
                        </td>
                        <td>@s.SimchaName</td>
                        <td>@s.ContCount</td>
                        <td>@s.Total.ToString("C")</td>
                        <td>@s.Date.ToLongDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="modal fade" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">New Simcha</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="POST" action="/home/NewSimcha">
                            <div class="form-group">
                                <label>Simcha Name</label>
                                <input class="form-control" name="simchaName" placeholder="Simcha Name" type="text">
                            </div>
                            <div class="form-group">
                                <label>Date</label>
                                <input type="date" name="date" class="form-control">
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" id="cancel" data-dismiss="modal">Cancel</button>
                                <button class="btn btn-primary" id="save" name="commit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
<script src="/js/homePage.js"></script>
}