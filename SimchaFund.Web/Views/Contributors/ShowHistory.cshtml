@using SimchaFund.Data
@model ShowHistoryViewModel
<div class="row">
    <h1>History for @Model.Name</h1>
</div>
<div class="row">
    <h2>Current Balance: @Model.Balance.ToString("C")</h2>
</div>
<div class="row">
    <div class="col-md-8">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Transaction t in Model.Transactions)
                {
                    <tr>
                        <td>@t.Action</td>
                        <td>@t.Date.ToLongDateString()</td>
                        <td>@t.Amount.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row align-content-center">
            <a href="/Contributors/" class="btn btn-lg btn-dark">Back to Contributors</a>
        </div>
    </div>
</div>